[alias]
  l = "log --graph --pretty=format:'%C(yellow)%h%Creset %C(red)%d%Creset \n%Cgreen(%cd) %C(blue)<%an>%Creset %s' --abbrev-commit --date=local"
  ll = "log --graph --pretty=format:'%C(yellow)%h%Creset %C(red)%d%Creset \n%Cgreen(%cd) %C(blue)<%an>%Creset %s\n' --abbrev-commit --date=local --stat"
